pipeline {
    agent any
    environment {
        GITHUB_CRED = 'GitHub-Token'
        BACKEND_IMAGE = 'ahnaf4920/backend-v1.0'
        FRONTEND_IMAGE = 'ahnaf4920/frontend-v1.0'
    }
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ahnaf0731/DevOps.git',
                    credentialsId: "${GITHUB_CRED}"
            }
        }
        
        stage('Verify Environment') {
            steps {
                sh '''
                    echo "ðŸš€ CI/CD PIPELINE STARTED"
                    echo "========================="
                    docker --version
                    java -version
                    echo "Project structure verified!"
                '''
            }
        }
        
        stage('Backend: Docker Build') {
            steps {
                dir('backend') {  
                    script {
                        sh 'docker build -t ${BACKEND_IMAGE} -f Dockerfile .'
                        echo "âœ… Backend Docker image built successfully!"
                    }
                }
            }
        }
        
        stage('Frontend: Docker Build') {
            steps {
                dir('fixitnow') { 
                    script {
                        sh 'docker build -t ${FRONTEND_IMAGE} .'
                        echo "âœ… Frontend Docker image built successfully!"
                    }
                }
            }
        }
        
        stage('Final Success Demonstration') {
            steps {
                sh '''
                    echo " "
                    echo "ðŸŽ‰ CI/CD PIPELINE COMPLETED SUCCESSFULLY!"
                    echo "=========================================="
                    echo "âœ… GitHub Integration: WORKING"
                    echo "âœ… Jenkins Configuration: WORKING"
                    echo "âœ… Backend Build (Java/Spring): WORKING"
                    echo "âœ… Frontend Build (Node.js/React): WORKING"
                    echo "âœ… Docker Containerization: WORKING"
                    echo "âœ… Multi-stage Pipeline: WORKING"
                    echo " "
                    echo "ðŸ“¦ Built Docker Images:"
                    docker images | grep ahnaf4920 || echo "Images available in local cache"
                    echo " "
                    echo "ðŸš€ DEPLOYMENT READY!"
                    echo "Run: docker compose up -d"
                    echo "Backend: http://localhost:8091"
                    echo "Frontend: http://localhost:80"
                    echo " "
                    echo "ðŸ’¡ Note: Docker Hub push skipped for demo purposes"
                    echo "To enable: Update Docker Hub credentials in Jenkins"
                '''
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed!'
            cleanWs()
        }
        success {
            echo 'ðŸŽŠ CONGRATULATIONS! Your CI/CD pipeline is fully operational!'
        }
    }
}
