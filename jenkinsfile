pipeline {
    agent any
    environment {
        GITHUB_CRED = 'GitHub-Token'
        DOCKERHUB_CRED = 'DockerHub-Token'  // Make sure this credential exists in Jenkins
        BACKEND_IMAGE = 'ahnaf4920/backend-v1.0'
        FRONTEND_IMAGE = 'ahnaf4920/frontend-v1.0'
    }
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ahnaf0731/DevOps.git',
                    credentialsId: "${GITHUB_CRED}"
            }
        }
        
        stage('Verify Environment') {
            steps {
                sh '''
                    echo "üöÄ CI/CD PIPELINE STARTED"
                    echo "========================="
                    docker --version
                    java -version
                    echo "Project structure verified!"
                '''
            }
        }
        
        stage('Backend: Docker Build') {
            steps {
                dir('backend') {  
                    script {
                        sh 'docker build -t ${BACKEND_IMAGE} -f Dockerfile .'
                        echo "‚úÖ Backend Docker image built successfully!"
                    }
                }
            }
        }
        
        stage('Frontend: Docker Build') {
            steps {
                dir('fixitnow') { 
                    script {
                        sh 'docker build -t ${FRONTEND_IMAGE} .'
                        echo "‚úÖ Frontend Docker image built successfully!"
                    }
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Push Backend Image
                    dir('backend') {
                        withDockerRegistry(credentialsId: "${DOCKERHUB_CRED}", url: 'https://index.docker.io/v1/') {
                            sh """
                                docker tag ${BACKEND_IMAGE} ${BACKEND_IMAGE}:${BUILD_NUMBER}
                                docker tag ${BACKEND_IMAGE} ${BACKEND_IMAGE}:latest
                                echo "üì§ Pushing backend image..."
                                docker push ${BACKEND_IMAGE}:${BUILD_NUMBER}
                                docker push ${BACKEND_IMAGE}:latest
                            """
                        }
                    }
                    
                    // Push Frontend Image  
                    dir('fixitnow') {
                        withDockerRegistry(credentialsId: "${DOCKERHUB_CRED}", url: 'https://index.docker.io/v1/') {
                            sh """
                                docker tag ${FRONTEND_IMAGE} ${FRONTEND_IMAGE}:${BUILD_NUMBER}
                                docker tag ${FRONTEND_IMAGE} ${FRONTEND_IMAGE}:latest
                                echo "üì§ Pushing frontend image..."
                                docker push ${FRONTEND_IMAGE}:${BUILD_NUMBER}
                                docker push ${FRONTEND_IMAGE}:latest
                            """
                        }
                    }
                }
            }
        }
        
        stage('Final Success Demonstration') {
            steps {
                sh '''
                    echo " "
                    echo "üéâ CI/CD PIPELINE COMPLETED SUCCESSFULLY!"
                    echo "=========================================="
                    echo "‚úÖ GitHub Integration: WORKING"
                    echo "‚úÖ Jenkins Configuration: WORKING"
                    echo "‚úÖ Backend Build (Java/Spring): WORKING"
                    echo "‚úÖ Frontend Build (Node.js/React): WORKING"
                    echo "‚úÖ Docker Containerization: WORKING"
                    echo "‚úÖ Multi-stage Pipeline: WORKING"
                    echo "‚úÖ Docker Hub Push: WORKING"
                    echo " "
                    echo "üì¶ Built Docker Images:"
                    docker images | grep ahnaf4920
                    echo " "
                    echo "üåê Pushed to Docker Hub:"
                    echo "Backend: ${BACKEND_IMAGE}:${BUILD_NUMBER}"
                    echo "Backend: ${BACKEND_IMAGE}:latest"
                    echo "Frontend: ${FRONTEND_IMAGE}:${BUILD_NUMBER}"
                    echo "Frontend: ${FRONTEND_IMAGE}:latest"
                    echo " "
                    echo "üöÄ DEPLOYMENT READY!"
                    echo "Run: docker compose up -d"
                    echo "Backend: http://localhost:8091"
                    echo "Frontend: http://localhost:80"
                    echo " "
                    echo "üìé Docker Hub URLs:"
                    echo "https://hub.docker.com/r/ahnaf4920/backend-v1.0"
                    echo "https://hub.docker.com/r/ahnaf4920/frontend-v1.0"
                '''
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed!'
            cleanWs()
        }
        success {
            echo 'üéä CONGRATULATIONS! Your CI/CD pipeline is fully operational!'
            echo "Docker images pushed to Docker Hub successfully! üê≥"
        }
    }
}
