pipeline {
    agent any
    environment {
        GITHUB_CRED = 'GitHub-Token'
        DOCKERHUB_CRED = 'DockerHub-Token'
        BACKEND_IMAGE = 'ahnaf4920/backend-v1.0'
        FRONTEND_IMAGE = 'ahnaf4920/frontend-v1.0'
    }
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ahnaf0731/DevOps.git',
                    credentialsId: "${GITHUB_CRED}"
            }
        }
        
        stage('Verify Docker') {
            steps {
                sh '''
                    echo "=== Checking Docker ==="
                    docker --version
                    echo "=== Project Structure ==="
                    ls -la
                '''
            }
        }
        
        stage('Backend: Docker Build') {
            steps {
                dir('backend') {  
                    script {
                        sh 'docker build -t ${BACKEND_IMAGE} -f Dockerfile .'
                        echo "Backend Docker image built successfully!"
                    }
                }
            }
        }
        
        stage('Frontend: Docker Build') {
            steps {
                dir('fixitnow') { 
                    script {
                        sh 'docker build -t ${FRONTEND_IMAGE} .'
                        echo "Frontend Docker image built successfully!"
                    }
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    withDockerRegistry(credentialsId: "${DOCKERHUB_CRED}", url: '') {
                        // Push Backend
                        dir('backend') {
                            sh """
                                docker tag ${BACKEND_IMAGE} ${BACKEND_IMAGE}:${BUILD_NUMBER}
                                docker tag ${BACKEND_IMAGE} ${BACKEND_IMAGE}:latest
                                docker push ${BACKEND_IMAGE}:${BUILD_NUMBER}
                                docker push ${BACKEND_IMAGE}:latest
                            """
                        }
                        
                        // Push Frontend  
                        dir('fixitnow') {
                            sh """
                                docker tag ${FRONTEND_IMAGE} ${FRONTEND_IMAGE}:${BUILD_NUMBER}
                                docker tag ${FRONTEND_IMAGE} ${FRONTEND_IMAGE}:latest
                                docker push ${FRONTEND_IMAGE}:${BUILD_NUMBER}
                                docker push ${FRONTEND_IMAGE}:latest
                            """
                        }
                    }
                }
            }
        }
        
        stage('Deploy with Docker Compose') {
            steps {
                sh '''
                    echo "=== Deploying with Docker Compose ==="
                    docker compose down || true
                    docker compose up -d
                    echo "=== Checking running containers ==="
                    docker ps
                '''
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed!'
        }
        success {
            echo 'SUCCESS: CI/CD Pipeline completed!'
            echo "Backend Image: ${BACKEND_IMAGE}"
            echo "Frontend Image: ${FRONTEND_IMAGE}"
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
